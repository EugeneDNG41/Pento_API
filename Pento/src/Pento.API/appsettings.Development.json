{
  "ConnectionStrings": {
    "Database": "Host=pento.database;Port=5432;Database=pento;Username=postgres;Password=postgres;",
    "Redis": "pento.redis:6379"
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.Seq"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Information"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "Seq",
        "Args": { "serverUrl": "http://pento.seq:5341" }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
    "Properties": {
      "Application": "Pento.Api"
    }
  },
  "Authentication": {
    "Audience": "account",
    "ValidIssuer": "http://pento-idp:8080/realms/pento",
    "MetadataUrl": "http://pento-idp:8080/realms/pento/.well-known/openid-configuration",
    "RequireHttpsMetadata": false
  },
  "KeyCloak": {
    "AdminUrl": "http://pento.identity:8080/admin/realms/pento/",
    "TokenUrl": "http://pento.identity:8080/realms/pento/protocol/openid-connect/token",
    "ConfidentialClientId": "pento-confidential-client",
    "ConfidentialClientSecret": "gNrkBVN7K8MCTDiCgkpSnT0iU55vkvpG",
    "PublicClientId": "pento-public-client"
  },
  "Outbox": {
    "IntervalInSeconds": 10,
    "BatchSize": 10
  }
}
